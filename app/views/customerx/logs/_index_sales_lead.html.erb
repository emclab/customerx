
  <h4>Log for Sales Leads</h4>
  <div class="pigination"><%= will_paginate @logs %></div>
  <table class="table table-striped">
    <tr>
      <th>#</th>
      <th>Date</th>
      <th>CustomerName</th>
      <th>LeadSubject</th>
      <th>Log</th>
      <th>Entered By</th>
      <th></th>
    </tr>

    <% @logs.each do |r| %>
        <tr>
          <td><%= r.id %></td>
          <td><%= (r.created_at + 8.hours).strftime("%Y/%m/%d")%></td>
          <td><%= Customerx::Customer.find_by_id(r.sales_lead.customer_id).short_name %></td>
          <td><%= prt(r, 'sales_lead.subject') %></td>
          <td><%= prt(r, :log) %></td>
          <td><%= prt(r, 'last_updated_by.name') %></td>
          
        </tr>
    <% end %>

  </table>

  <%= link_to 'Back', SUBURI + "/authentify/view_handler?index=0", :id => 'close' %>

