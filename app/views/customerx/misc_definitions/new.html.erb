<div id="main_body">
<% if @for_which == 'customer_status' %>
  <h4><%=t('New Customer Status Category') %></h4>
  <% name_label = t('StatusCategory') %>  
<% elsif @for_which == 'customer_comm_category' %>
  <h4><%=t('New Customer Comm Category') %></h4>
  <% name_label = t('CommRecordCategory') %>  
<% elsif @for_which == 'customer_quality_system'%>
  <h4><%=t('New Quality System') %></h4>
  <% name_label = t('QualitySystem') %>  
<% elsif @for_which == 'sales_lead_source' %>
  <h4><%=t('New Sales Lead Source') %></h4>
  <% name_label = t('SalesLeadSource') %> 
<% end %>
<%= simple_form_for @misc_definition do |f| %>     
  <%= f.input :name, :label => name_label %>
  <%= f.input :brief_note, :label => t("Brief Note:"), :input_html => {:rows => 2} %> 
  <%#= f.input :for_which, :input_html => {:value => @for_which}, :as => :hidden %>
  <%= f.input :ranking_order, :label => t('Ranking Index'), :placehoder => '1, 2, 3 ...'%> 
  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %> 

<%= link_to t('Back'), misc_definitions_path(:for_which => @for_which), :class => BUTTONS_CLS['action'] %>
</div>