<div id="main_body">
<% if @for_which == 'customer_status' %>
  <h1>New Customer Status Category</h1>
  <% name_label = 'StatusCategory' %>  
<% elsif @for_which == 'customer_comm_category' %>
  <h1>New Customer Comm Category</h1>
  <% name_label = 'CommRecordCategory' %>  
<% elsif @for_which == 'customer_qs'%>
  <h1>New Quality System</h1>
  <% name_label = 'QualitySystem' %>  
<% elsif @for_which == 'sales_lead_source' %>
  <h1>New Sales Lead Source</h1>
  <% name_label = 'SalesLeadSource' %> 
<% end %>
<%= simple_form_for @misc_definition do |f| %>     
  <%= f.input :name, :label => name_label %>
  <%= f.input :brief_note, :label => "Brief Note:", :input_html => {:rows => 2} %> 
  <%= f.input :for_which, :input_html => {:value => @for_which}, :as => :hidden %>
  <%= f.input :ranking_order, :label => 'Ranking Index', :placehoder => '1, 2, 3 ...'%> 
  <%= f.button :submit, 'Save' %>  
<% end %> 

<%= link_to 'Back', misc_definitions_path(:for_which => @for_which) %>
</div>