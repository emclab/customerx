<div id="main_body">
  <h4><%=t('Lead Source') %></h4>
  <table class="table table-striped">
    <tr>
      <th>#</th>
      <th><%=t('Create Date') %></th>
      <th><%=t('Name') %></th>
      <th><%=t('Brief Note') %></th>
      <th><%=t('Ranking Order') %></th>
      <th><%=t('Entered By') %></th>
      <th></th>
    </tr>

    <% @misc_definitions.each do |r| %>
        <tr>
          <td><%= r.id %></td>
          <td><%= (r.created_at + 8.hours).strftime("%Y/%m/%d")%></td>
          <td><%= r.name %></td>
          <td><%= r.brief_note %></td>
          <td><%= r.ranking_order %></td>
          <td><%= r.last_updated_by.name %></td>
          <td><%= link_to 'Edit', edit_misc_definition_path(r, :for_which => 'sales_lead_source',:subaction => 'sales_lead_source', :format => :js), 
                                  :remote => true, :class =>'btn btn-primary' if has_action_right?('update_sales_lead_source', 'customerx_misc_definitions', r) %></td>
        </tr>
    <% end %>

  </table>

<table class="table table-striped">
  <tr>
    <th>
    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		<%= link_to t("New Lead Source"), new_misc_definition_path(:for_which => 'sales_lead_source', :subaction => 'sales_lead_source', :format => :js), :remote => true, 
              :id => 'new_log_link' if has_action_right?('create_sales_lead_source', 'customerx_misc_definitions') %>
    </th>
  </tr>
</table>

  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :id => 'close' %>

</div>
