<div id="main_body">
  <h1>Lead Source</h1>
  <table>
    <tr>
      <th>#</th>
      <th>Create Date</th>
      <th>Name</th>
      <th>Brief Note</th>
      <th>Ranking Order</th>
      <th>Entered By</th>
      <th></th>
    </tr>

    <% @lead_sources.each do |r| %>
        <tr>
          <td><%= r.id %></td>
          <td><%= (r.created_at + 8.hours).strftime("%Y/%m/%d")%></td>
          <td><%= r.name %></td>
          <td><%= r.brief_note %></td>
          <td><%= r.ranking_order %></td>
          <td><%= r.last_updated_by.name %></td>
          <td><%= link_to 'Edit', edit_lead_source_path(cate, :format => :js), :remote => true if has_update_right? %></td>
        </tr>
    <% end %>

  </table>

  <%= link_to 'Back', SUBURI + "/authentify/view_handler?index=0", :id => 'close' %>
  <%= link_to "New Lead Source", new_lead_source_path(:format => :js), :remote => true, :id => 'new_log_link' if has_create_right? %>

</div>
