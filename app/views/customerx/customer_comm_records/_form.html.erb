<%= simple_form_for([@customer, @customer_comm_record]) do |f| %>    
 
  <%= f.input :customer_name, :label => 'CustomerName:', :readonly => true, :required => false, :input_html => {:value => @customer.name} %> 
  <%= f.input :subject, :label => "关于：" %>  
  <%= f.input :contact_info, :label => "联系人&电话： " %>  
  <%= f.input :via, :label => "联系方式： ", :collection => contact_via %>
  <%= f.input :content, :label => "联系内容 ：", :input_html => {:rows => 4} %>   
  <%= f.input :comm_category_id, :label => "联系分类： ", :collection => Customerx::CommCategory.where(:active => true).order("ranking_order") %>  
  <% if has_void_right? %>
    <%= f.input :void, :label => '删除：', :collection => [['Yes', true],['No',false]] %>
  <% else %>
    <%= f.input :void, :label => '删除：', :collection => [['Yes', true],['No',false]], :readonly => true, :required => false %>
  <% end %>
  <%= f.input :reported_by_id, :label => '初始联系人：', :collection => Authentify::UsersHelper.return_users('create', 'customerx_customer_comm_records'),
                                                       :label_method => lambda {|r| "#{r.name}-#{r.user_levels.first.sys_user_group.zone.zone_name}"}, :value_method => :id%>
  <%= f.button :submit, '保存' %>  
<% end %> 