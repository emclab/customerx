<div id="main_body">
  <h1>Customer Status Category</h1>
  <table>
    <tr>
      <th>#</th>
      <th>Create Date</th>
      <th>Category Name</th>
      <th>Brief Note</th>
      <th>Ranking Order</th>
      <th>Entered By</th>
      <th></th>
    </tr>

    <% @customer_status_categories.each do |cate| %>
        <tr>
          <td><%= cate.id %></td>
          <td><%= (cate.created_at + 8.hours).strftime("%Y/%m/%d")%></td>
          <td><%= cate.cate_name %></td>
          <td><%= cate.brief_note %></td>
          <td><%= cate.ranking_order %></td>
          <td><%= cate.last_updated_by.name %></td>
          <td><%= link_to 'Edit', edit_customer_status_category_path(cate, :format => :js), :remote => true if has_update_right? %></td>
        </tr>
    <% end %>

  </table>

  <%= link_to 'Back', SUBURI + "/authentify/view_handler?index=0", :id => 'close' %>
  <%= link_to "New Category", new_customer_status_category_path(:format => :js), :remote => true, :id => 'new_log_link' if has_create_right? %>

</div>
