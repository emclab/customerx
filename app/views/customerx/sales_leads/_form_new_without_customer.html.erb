<%= simple_form_for @sales_lead do |f| %>    
 
  <%= f.input :lead_date, :label => "Date:", :as => :string%>
  <%= f.input :customer_name_autocomplete, :input_html => { data: {autocomplete_source: autocomplete_customers_path}}, :placeholder => "输入关键字", :label => "客户 ：" %>  
  <%= f.input :subject, :label => 'Subject', :placeholder => '一句话说明' %>
  <%= f.input :lead_info, :label => 'LeadInfo:', :input_html => {:rows => 4} %>
  <%= f.input :contact_instruction, :label => 'ContactInstruction:', :hint => '联系人及电话等联系方式', :input_html => { :rows => 6} %>  
  <%= f.input :lead_source, :label => 'LeadSource：', :collection => lead_sources() %>     
  <%= f.input :lead_eval, :label => 'LeadEval:', :input_html => { :rows => 4} %> 
  <%= f.input :lead_accuracy, :label => 'Accuracy', :collection => 1..10, :include_blank => true %>
  <%= f.input :lead_quality, :label => 'QualityScale', :collection => 1..10, :include_blank => true %>
  <%= f.input :provider_id, :label => 'Provider:', :collection => Authentify::UsersHelper.return_users('create', 'customerx_sales_leads') %>        
     
  
  <%= f.button :submit, 'Save' %>  
<% end %>  


