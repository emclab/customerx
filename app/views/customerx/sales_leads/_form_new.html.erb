<%= simple_form_for([@customer, @sales_lead]) do |f| %>    
 
  <%= f.input :lead_date, :label => t("Date:"), :as => :string%>
  <%= f.input :customer_name, :label => t('CustomerName:'), :readonly => true, :required => false, :input_html => {:value => @customer.name} %>  
  <%= f.input :subject, :label => t('Subject'), :placeholder => '一句话说明线索是什么' %>
  <%= f.input :lead_info, :label => t('LeadInfo:'), :input_html => {:rows => 4} %>
  <%= f.input :contact_instruction, :label => t('ContactInstruction:'), :hint => '联系人及电话等联系方式', :input_html => { :rows => 6} %>  
  <%= f.input :lead_source_id, :label => t('LeadSource：'), :collection => lead_sources() %>     
  <%= f.input :lead_eval, :label => t('LeadEval:'), :input_html => { :rows => 4} %> 
  <%= f.input :lead_accuracy, :label => t('Accuracy:'), :collection => 1..10, :include_blank => true %>
  <%= f.input :lead_quality, :label => t('QualityScale:'), :collection => 1..10, :include_blank => true %>
  <%= f.input :provider_id, :label => t('Provider:'), :collection => Authentify::UsersHelper.return_users('create', 'customerx_sales_leads'),
                                                   :label_method => :name, :value_method => :id  %>        
     
  
  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %>  


