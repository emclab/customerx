<%= simple_form_for([@customer, @sales_lead]) do |f| %>    
 
  <%= f.input :lead_date, :label => "Date:", :as => :string%>
  <%= f.input :customer_name, :label => 'CustomerName:', :readonly => true, :required => false, :input_html => {:value => @customer.name} %>  
  <%= f.input :subject, :label => 'Subject', :hint => '一句话说明线索是什么' %>
  <%= f.input :lead_info, :label => 'LeadInfo:', :input_html => {:rows => 4} %>
  <%= f.input :contact_instruction, :label => 'ContactInstruction:', :hint => '联系人及电话等联系方式', :input_html => { :rows => 6} %>  
  <%= f.input :lead_source_id, :label => 'LeadSource：', :collection => lead_sources() %>     
  <%= f.input :lead_eval, :label => 'LeadEval:', :input_html => { :rows => 4} %>
  <%= f.input :sale_success, :label => 'SaleSuccess:', :collection => [['Yes', true], ['No', false]], :include_blank => true %>
  <div id="sales_lead_order_total">
  <%= f.input :initial_order_total, :label => '成单金额￥：', :hint => '初次订单金额' %> 
  </div>
  <%= f.input :close_lead, :label => 'CloseLead:', :collection => [['Yes', true], ['No', false]], :include_blank => true %>
  <%= f.input :lead_accuracy, :label => 'Accuracy', :collection => 1..10, :include_blank => true %>
  <%= f.input :lead_quality, :label => 'QualityScale', :collection => 1..10, :include_blank => true %>
  <%= f.input :provider_name_autocomplete, :input_html => { data: {autocomplete_source: authentify.autocomplete_users_path}}, :placeholder => "输入关键字", 
              :label => "线索人：", :required => true  %>        
 <!-- <%= f.input :provider_id, :label => '线索人：', :collection => Authentify::UsersHelper.return_users('create','customerx_sales_leads') %>  -->
  
  <%= f.button :submit, 'Save' %>  
<% end %>  


