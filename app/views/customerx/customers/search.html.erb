<div id="main_body">
<h1>搜索客户</h1>

<%= simple_form_for @customer,  :method => :put, :url => search_results_customers_path  do |f| %>   <!--:url => {:action => 'search_results'} causes error in rpsec. But not in execution -->
  <%= f.input :start_date_s, :label => "开始日期 ：", :as => :string, :input_html => {:size => 40} %>
  <%= f.input :end_date_s, :label => "结束日期 ：", :as => :string, :input_html => {:size => 40} %> 
  <%= f.input :keyword, :label => "关键词:" %>  
  <%= f.input :zone_id_s, :label =>"片区：", :collection => Authentify::Zone.where(:active => true).order("ranking_order"),
              :label_method => :zone_name, :value_method => :id if has_search_right?("customerx_customers") %>
  <%= f.input :sales_id_s, :collection => sales(), :label_method => :name, :value_method => :id, :prompt => "选业务员", 
              :label => "业务员:" if has_search_right?("customerx_customers") || has_search_zone_right?("customerx_customers") %> 
  <%= f.input :status_category_s, :collection => Customerx::MiscDefinition.where(:for_which => 'customer_status').where(:active => true).order("ranking_order"), :label => "客户状态：", :prompt => "选客户状态", :include_blank => true,
              :label_method => :cate_name, :value_method => :id  %>  
 
  <%= f.button :submit, "搜索" %>  
<% end %> 
<%= link_to 'Back', SUBURI + "/authentify/view_handler?index=0" %>

</div>
